  SwitchLed(15, true);
  int right = 15;
  int left = 15;
  for (int i = 0; i < 15; i++) {
    right -= 1;
    left += 1;
    SwitchLed(right, true);
    SwitchLed(left, true);

    FastLED.setBrightness(50);
    FastLED.show();
    delay(250);
  }

  // Reinit leds
  for (int i = 0; i < 50; i++) {
    SwitchLed(i, false);
  }
  FastLED.setBrightness(0);
  FastLED.show();
}

